    <%= f.label "senha" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-line" %>
  </div>

  <div class="form col-md-1">
    <%= f.label "Login" %><br>
    <input class="btn btn-primary" type="submit" value="Entrar">
  </div>

